<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="009-create-board-tables" author="jake">
        <createTable tableName="boards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="view_count" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <!-- Base Entity Columns -->
            <column name="use_yn" type="VARCHAR(1)" defaultValue="Y">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="updated_at" type="DATETIME"/>
        </createTable>

        <createTable tableName="comments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="board_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <!-- Base Entity Columns -->
            <column name="use_yn" type="VARCHAR(1)" defaultValue="Y">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="updated_at" type="DATETIME"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="comments" baseColumnNames="board_id"
                                 constraintName="fk_comments_board"
                                 referencedTableName="boards" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="comments" baseColumnNames="parent_id"
                                 constraintName="fk_comments_parent"
                                 referencedTableName="comments" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
