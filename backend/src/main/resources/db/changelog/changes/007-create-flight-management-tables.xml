<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="007-create-flight-management-tables" author="antigravity">
        <!-- Create Airlines Table -->
        <createTable tableName="airlines">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="code" type="VARCHAR(50)"/>
        </createTable>

        <!-- Create Flight Tickets Table -->
        <createTable tableName="flight_tickets">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="airline_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="departure_airport" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="departure_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="arrival_airport" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="arrival_time" type="TIME">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add Foreign Key for Flight Tickets -> Airlines -->
        <addForeignKeyConstraint baseColumnNames="airline_id"
                                 baseTableName="flight_tickets"
                                 constraintName="fk_flight_ticket_airline"
                                 referencedColumnNames="id"
                                 referencedTableName="airlines"/>
    </changeSet>

</databaseChangeLog>
