<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-discount-policies-table" author="jake">
        <createTable tableName="discount_policies">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="min_days" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="discount_rate" type="DECIMAL(10, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="discount_amount" type="DECIMAL(19, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_discount_policy_hotel" references="hotels(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="use_yn" type="VARCHAR(1)" defaultValue="Y"/>
        </createTable>
    </changeSet>

    <changeSet id="add-discount-columns-to-reservations" author="jake">
        <addColumn tableName="reservations">
            <column name="discount_price" type="DECIMAL(19, 2)"/>
            <column name="discount_policy_name" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
